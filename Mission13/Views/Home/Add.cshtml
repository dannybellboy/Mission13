@{
    ViewData["Title"] = "Add Bowler";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <form method="post">
        <div>
            <label>First Name: </label>
            <input type="text" />
        </div>

        <div>
            <label>Middle Initial: </label>
            <input type="text" />
        </div>

        <div>
            <label>Last Name: </label>
            <input type="text" />
        </div>

        <div>
            <label>Address: </label>
            <input type="text" />
        </div>

        <div>
            <label>City: </label>
            <input type="text" />
        </div>

        <div>
            <label>State: </label>
            <input type="text" />
        </div>

        <div>
            <label>Zip: </label>
            <input type="text" />
